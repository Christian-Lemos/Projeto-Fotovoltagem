extends layout

block tituloPagina
    | Página Inicial

block content
    h1 Página Inicial
    h3 Dispositivos conectados:

    if(clientesConectados.length == 0)
        p
            b.text-danger Nenhum despositivo conectado
    else
        .table-responsive
            table.table.table-striped 
                thead
                    tr
                        th ID/Codigo   
                        th Nome
                        th Estado
                        th Ação
                        th Configurações
                tbody
                    for disp in clientesConectados
                        tr
                            td= disp.codigo
                            td= disp.nome
                            if(disp.estado == false)
                                td.text-warning 
                                    | Desligado 
                                    i.fa.fa-toggle-off
                                td
                                    a(href="sonoff/toggle?valor=1").btn.btn-success Ligar
                            else   
                                td.text-success 
                                    | Ligado    
                                    i.fa.fa-toggle-on
                                td
                                    a(href="sonoff/toggle?valor=0").btn.btn-warning Desligar
                            td
                                a(href="sonoff/configuracoes?codigo=#{disp.codigo}").btn.btn-primary 
                                    i.fa.fa-cog
extends ../../../templates/layoutBase

block tituloPagina
    | Simulador Residencial

block content
    h1 Simulador Residencial (Não funcional)

   
    .container-fluid
        h2 Energia
        .row
            .col-md-12.col-sm-12
                h3 Paineis Solares
                .table-reponsive
                    table.table.table-bordered.table-striped
                        thead
                            tr
                                th Nome
                                th Potência máxima
                                th Ação
                        tbody#tbody-paineis
            
                form(onsubmit="return false", autocomplete="off")#form-adicionar-painel
                    .form-group
                        label(for="nome") Nome:
                        input(type="text", name="nome", placeholder = "Nome de sua preferência do painel solar", autocomplete="off", required).form-control#form-adicionar-painel-nome
                    .form-group
                        label(for="potencia") Potência máxima (W):
                        input(type="number", name="potencia",placeholder = "Energia máxima que o painel poderá produzir " , autocomplete="off", required).form-control#form-adicionar-painel-potencia
                    .row
                        .col-md-offset-3.col-md-6.col-sm-12.text-center
                            button(type="submit").btn.btn-primary.btn-block Adicionar Painel Solar
    hr
    .container-fluid
        h2 Estrutura
        .row
            .col-md-12.col-sm-12
                h3 Salas
                .table-reponsive
                    table.table.table-bordered.table-striped
                        thead
                            tr
                                th Nome
                                th Saída
                                th Conexões
                                th Ação
                        tbody#tbody-salas
            
                form(onsubmit="return false", autocomplete="off")#form-adicionar-sala
                    .form-group
                        label(for="nome") Nome:
                        input(type="text", name="nome", placeholder = "Nome de sua preferência da sala", autocomplete="off", required).form-control
                    .form-group
                        label(for="saida") É uma saída da casa:
                            input(type="checkbox", name="saida").checkbox
                    .row
                        .col-md-offset-3.col-md-6.col-sm-12.text-center
                            button(type="submit").btn.btn-primary.btn-block Adicionar Sala
    hr
    .container-fluid
        h2 Configurações de cenário
        .row
            form(onsubmit="return false", autocomplete="off")#form-config-cenario
                .form-group
                    label(for="duracao") Duração do dia em minutos:
                    input(type="number", name="duracao", autocomplete="off", value = "24", required).form-control
                .form-group
                    label(for="variancia") Variância de potência de paineis solares:
                    input(type="number", name="variancia", autocomplete="off", value = "200", required).form-control
                .form-group
                    label(for="duracao_variancia") Tempo em minutos da variância:
                    input(type="number", name="duracao_variancia", autocomplete="off", value = "0.3", step=".01", required).form-control
                .row
                    .col-md-offset-3.col-md-6.col-sm-12.text-center
                        button(type="submit").btn.btn-success.btn-lg.btn-block Concluír Cenário
            

    #modal-editar-painel.modal.fade(role='dialog')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal') &times;             
                    h4.modal-title        
                .modal-body
                    .row
                        .col-md-offset-1.col-md-10.col-sm-12
                            form(onsubmit="return false", autocomplete="off")#form-editar-painel
                                input(type="hidden", name="id", value = "")#form-editar-painel-id
                                .form-group
                                    label(for="nome") Nome:
                                    input(type="text", name="nome", placeholder = "Nome de sua preferência do painel solar", autocomplete="off", required).form-control#form-editar-painel-nome
                                .form-group
                                    label(for="potencia") Potência máxima (W):
                                    input(type="number", name="potencia",placeholder = "Energia máxima que o painel poderá produzir " , autocomplete="off", required).form-control#form-editar-painel-potencia
                                .row
                                    .col-md-offset-3.col-md-6.col-sm-12.text-center
                                        button(type="submit").btn.btn-primary.btn-block Editar Painel Solar
    #modal-editar-sala.modal.fade(role='dialog')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal') &times;             
                    h4.modal-title       
                .modal-body
                    .row
                        .col-md-offset-1.col-md-10.col-sm-12
                            form(onsubmit="return false", autocomplete="off")#form-editar-sala
                                input(type="hidden", name="id", value = "")#form-editar-sala-id
                                .form-group
                                    label(for="nome") Nome:
                                    input(type="text", name="nome", placeholder = "Nome de sua preferência da sala", autocomplete="off", required).form-control#form-editar-sala-nome
                                .form-group
                                    label(for="saida") É uma saída da casa:
                                        input(type="checkbox", name="saida").checkbox#form-editar-sala-saida
                                .row
                                    .col-md-offset-3.col-md-6.col-sm-12.text-center
                                        button(type="submit").btn.btn-primary.btn-block Editar Sala
    #modal-configurar-sala.modal.fade(role='dialog')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal') &times;             
                    h4.modal-title   
                .modal-body
                    h4 Conexões
                    .row
                        .col-md-offset-1.col-md-10.col-sm-12
                            .table-reponsive
                                table.table.table-bordered.table-striped
                                    thead
                                        tr
                                            th Nome
                                            th Excluir
                                    tbody#tbody-conexoes
                            form(onsubmit="return false", autocomplete="off")#form-adicionar-conexao-sala
                                input(type="hidden", name="id", value = "").configurar-sala-id
                                .form-group
                                    select(name='conexao')#form-adicionar-conexao-sala-conexao.form-control
                                .row
                                    .col-md-offset-3.col-md-6.col-sm-12.text-center
                                        button(type="submit").btn.btn-primary.btn-block Adicionar Conexão
                    h4 Ar condicionados
                    .row
                        .col-md-offset-1.col-md-10.col-sm-12
                            .table-reponsive
                                table.table.table-bordered.table-striped
                                    thead
                                        tr
                                            th Nome
                                            th Potência
                                            th BTUs
                                            th Excluir
                                    tbody#tbody-arcondicionados
                            form(onsubmit="return false", autocomplete="off")#form-adicionar-arcondicionado-sala
                                input(type="hidden", name="id", value = "").configurar-sala-id
                                .form-group
                                    label(for="nome") Nome:
                                    input(type="text", name="nome", placeholder = "Nome do ar condicionado", autocomplete="off", required).form-control
                                .form-group
                                    label(for = 'btus') BTUS
                                    select(name='btus').form-control
                                        option(value="7000") 7000
                                        option(value="7500") 7500
                                        option(value="9000") 9000
                                        option(value="12000") 12000
                                        option(value="18000") 18000
                                        option(value="23000") 23000
                                        option(value="24000") 24000
                                        option(value="31000") 31000
                                        option(value="36000") 36000
                                        option(value="42000") 42000
                                
                                .form-group
                                    label(for="potencia") Potência em Watts:
                                    input(type="number", name="potencia", autocomplete="off", required).form-control
                                .row
                                    .col-md-offset-3.col-md-6.col-sm-12.text-center
                                        button(type="submit").btn.btn-primary.btn-block Adicionar Ar Condicionado
                    h4 Aquecedores
                        .row
                            .col-md-offset-1.col-md-10.col-sm-12
                                .table-reponsive
                                    table.table.table-bordered.table-striped
                                        thead
                                            tr
                                                th Nome
                                                th Potência
                                                th BTUs
                                                th Excluir
                                        tbody#tbody-aquecedores
                                form(onsubmit="return false", autocomplete="off")#form-adicionar-aquecedor-sala
                                    input(type="hidden", name="id", value = "").configurar-sala-id
                                    .form-group
                                        label(for="nome") Nome:
                                        input(type="text", name="nome", placeholder = "Nome do aquecedor", autocomplete="off", required).form-control
                                    .form-group
                                        label(for = 'btus') BTUS
                                        select(name='btus').form-control
                                            option(value="7000") 7000
                                            option(value="7500") 7500
                                            option(value="9000") 9000
                                            option(value="12000") 12000
                                            option(value="18000") 18000
                                            option(value="23000") 23000
                                            option(value="24000") 24000
                                            option(value="31000") 31000
                                            option(value="36000") 36000
                                            option(value="42000") 42000
                                    
                                    .form-group
                                        label(for="potencia") Potência em Watts:
                                        input(type="number", name="potencia", autocomplete="off", required).form-control
                                    .row
                                        .col-md-offset-3.col-md-6.col-sm-12.text-center
                                            button(type="submit").btn.btn-primary.btn-block Adicionar Aquecedor
                    h4 Configuracoes
                        form(onsubmit="return false", autocomplete="off")#form-configuracoes-sala
                            input(type="hidden", name="id", value = "").configurar-sala-id
                            .form-group
                                label(for = 'tamanho') Tamanho em metros quadrados da sala
                                select(name='tamanho').form-control#form-configuracoes-sala-tamanho
                                    option(value="9") 9
                                    option(value="12") 12
                                    option(value="15") 15
                                    option(value="20") 20
                                    option(value="25") 25
                                    option(value="30") 30
                                    option(value="40") 40
                                    option(value="50") 50
                                    option(value="60") 60
                                    option(value="70") 70
                            
                            .form-group
                                label(for="lampada") Lâmpada na sala:
                                    input(type="checkbox", name="lampada").checkbox#form-configuracoes-sala-lampada
                            .row
                                .col-md-offset-3.col-md-6.col-sm-12.text-center
                                    button(type="submit").btn.btn-primary.btn-block Salvar Configurações
                                
block posScripts
